@model ContactManager.Models.Address

<h2>Delete Address</h2>

<div>
    <h4>Are you sure you want to delete this address?</h4>

    <dl class="dl-horizontal">
        <dt>Street Name:</dt>
        <dd>@Model.StreetName</dd>

        <dt>Street Number:</dt>
        <dd>@Model.StreetNumber</dd>

        <dt>Unit Number:</dt>
        <dd>@Model.UnitNumber</dd>

        <dt>Postal Code:</dt>
        <dd>@Model.PostalCode</dd>
    </dl>

    <form method="post" action="/Address/Delete/@Model.AddressID">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="/Address/Index">Back to List</a>
    </form>
</div>
