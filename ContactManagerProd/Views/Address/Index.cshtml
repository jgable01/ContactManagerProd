@model List<ContactManager.Models.Address>

<h2>Addresses</h2>

<p>
    <a asp-action="Create" asp-controller="Address" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Street Name</th>
            <th>Street Number</th>
            <th>Unit Number</th>
            <th>Postal Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var address in Model)
        {
            <tr>
                <td>@address.StreetName</td>
                <td>@address.StreetNumber</td>
                <td>@address.UnitNumber</td>
                <td>@address.PostalCode</td>
                <td>
                    <a asp-action="Details" asp-controller="Address" asp-route-id="@address.AddressID">Details</a> |
                    <a asp-action="Edit" asp-controller="Address" asp-route-id="@address.AddressID">Edit</a> |
                    <a asp-action="Delete" asp-controller="Address" asp-route-id="@address.AddressID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
