@model ContactManager.Models.Address

<h2>Delete Address</h2>

<div>
    <h4>Are you sure you want to delete this address?</h4>

    <dl class="dl-horizontal">
        <dt>Street Name:</dt>
        <dd>@Model.StreetName</dd>
        <dt>Street Number:</dt>
        <dd>@Model.StreetNumber</dd>
        <dt>Unit Number:</dt>
        <dd>@Model.UnitNumber</dd>
        <dt>Postal Code:</dt>
        <dd>@Model.PostalCode</dd>
    </dl>

    <form asp-action="Delete" asp-controller="Address" asp-route-id="@Model.AddressID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
