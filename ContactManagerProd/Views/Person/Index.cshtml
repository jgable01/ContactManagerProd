@model List<ContactManager.Models.Person>

<h2>Persons</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Actions</th>
    </tr>

    @foreach (var person in Model)
    {
        <tr>
            <td>@person.FirstName</td>
            <td>@person.LastName</td>
            <td>@person.Email</td>
            <td>@person.PhoneNumber</td>
            <td>
                <a asp-action="Details" asp-route-id="@person.PersonID">Details</a> |
                <a asp-action="Edit" asp-route-id="@person.PersonID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@person.PersonID">Delete</a>
            </td>
        </tr>
    }
</table>
